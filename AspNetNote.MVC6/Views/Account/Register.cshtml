@model  AspNetNote.MVC6.Models.User
<h2>Register</h2>

<form class="form-horizontal" method="post" asp-controller="Account" asc-action="Register">
    <div class="form-group">
        <label>사용자ID</label>
        <input type="text" class="form-control" asp-for="User_Id" placeholder="사용자 ID입력" />
        <span class="text-danger" asp-validation-for="User_Id"></span>
    </div>

    <div class="form-group">
        <label>사용자 비밀번호</label>
        <input type="text" class="form-control" asp-for="User_Password" placeholder="사용자 비밀번호 입력" />
        <span class="text-danger" asp-validation-for="User_Password"></span>
    </div>

    <div class="form-group">
        <label>사용자 이름</label>
        <input type="text" class="form-control" asp-for="User_Name" placeholder="사용자 이름 입력" />
        <span class="text-danger" asp-validation-for="User_Name"></span>
    </div>
   
    <div class="form-group">
        <button class="btn btn-primary" />회원가입</button>
        <a class="btn btn-warning" href="#">취소</a>

    </div>


</form>