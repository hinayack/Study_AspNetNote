@model AspNetNote.MVC6.ViewModels.LoginViewModel
<h2>Login</h2>
<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login">
    <span class="text-danger" asp_validateion-summary="ModelOnly"></span>
    <div class="form-group">
        <input type="text" class="form-control" asp-for="User_Id" placeholder="사용자 ID 입력" />
        <span class="text-danger" asp-validation-for="User_Id"></span>
    </div>

    <div class="form-group">
        <input type="text" class="form-control" asp-for="User_Password" placeholder="사용자 패스워드 입력" />
        <span class="text-danger" asp-validation-for="User_Password"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">로그인</button>
    </div>
</form>